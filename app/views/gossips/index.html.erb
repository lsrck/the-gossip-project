<h1>Listing des gossips</h1>
 
<table>
  <tr>
    <th>Author</th>
    <th>Content</th>
  </tr>
 
  <% @gossips.each do |gossip| %>
    <tr>
      <td><%= gossip.anonymous_author %></td>
      <td><%= gossip.content %></td>
      <td><%= link_to "Aller sur le gossip", gossip_path(gossip) %></td>
      <td><%= link_to "Editer le gossip",
      edit_gossip_path(gossip) %></td> 
       <td><%= link_to 'Destroy', gossip_path(gossip),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

